    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "rollup": "^4.27.3",
    "rollup-plugin-dts": "^6.1.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3"
