{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "declarationDir": "./dist",
    "resolveJsonModule": true,
    "declaration": true,
    "module": "ESNext",
    "moduleResolution": "node"
  },
  "include": ["./src/**/*.ts"],
  "typeRoots": ["./node_modules/@types", "./types"]
}
